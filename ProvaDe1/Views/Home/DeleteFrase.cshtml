@{
    ViewData["Title"] = "Cabcella la Frase";
}
@using System.Collections.Generic;
@model List<FraseModel>;
<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        
    </div>
    @{
        <table>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Testo</td>
                    <td><button class="btn-sm btn-danger" onclick="deleteFraseById('@Model[i].ID')">Delete</button></td>
                </tr>
            }
        </table>
    }
</div>
